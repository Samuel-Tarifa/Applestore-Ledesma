// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product{
  id String @id @default(uuid())
  name String @unique
  description String?
  price String
  stock Int? @default(1)
  categoryId Int
  discount Int? @default(0)
  image String @default("defaultImage.webp")
  category Category @relation(fields: [categoryId],references: [id])
  iphoneModel IphoneModelOnProduct[]
  attributes AttributeOnProduct[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attribute{
  id Int @id @default(autoincrement())
  name String @unique
  products AttributeOnProduct[]
}

model AttributeOnProduct{
  product Product @relation(fields: [productId],references: [id])
  productId String
  attribute Attribute @relation(fields: [attributeId],references: [id])
  attributeId Int

  @@id([productId,attributeId])
}

model IphoneModelOnProduct{
  product Product @relation(fields: [productId],references: [id])
  productId String
  iphoneModel IphoneModel @relation(fields: [iphoneModelId],references: [id])
  iphoneModelId Int
  assignedAt DateTime @default(now())

  @@id([productId, iphoneModelId])
}

model IphoneModel{
  id Int @id @default(autoincrement())
  name String @unique
  products IphoneModelOnProduct[]
}

model Category{
  id Int @id @default(autoincrement())
  name String @unique
  products Product[]
}